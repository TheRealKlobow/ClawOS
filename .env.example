# Build-time variables (example only; no real secrets)

# Path to Raspberry Pi OS Lite image
BASE_IMAGE_PATH=./out/base/raspios-lite.img

# Output image path
OUTPUT_IMAGE_PATH=./out/clawos-pi.img
IMAGE_EXPAND_GB=4

# OpenClaw runtime
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_GATEWAY_BIND=loopback
# Pin OpenClaw source for reproducible builds (tag or commit)
OPENCLAW_REF=f1bf5586857fa083fead592fc28fd70d543c30b9
PNPM_VERSION=9.15.4

# Optional static network override (default false = DHCP)
NETWORK_STATIC_ENABLED=false
NETWORK_STATIC_ADDRESS=
NETWORK_STATIC_GATEWAY=
NETWORK_STATIC_DNS=

# SSH hardening options
SSH_DISABLE_PASSWORD=true
